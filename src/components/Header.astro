---
import Image from "astro/components/Image.astro";
import YouTubeAdsIframe from "./YouTubeAdsIframe.astro";
import gusano_anime1 from "../assets/gusanos/gusano_anime1.webp";
import certs03 from "../assets/certs/certs0-3.webp";
import certs47 from "../assets/certs/certs4-7.webp";
import cert8 from "../assets/certs/cert8.webp";
import silkpockets from "../assets/products/silkpockets.webp";
import cert10 from "../assets/certs/cert10.webp";
import cert11 from "../assets/certs/cert11.webp";
import TiktokAdsIframe from "./TiktokAdsIframe.astro";
---

<header>
    <YouTubeAdsIframe videoId="lxm3Wemm-N4" />
    <div class="logoContainer">
        <img src="/Logo.svg" alt="" width="100%" />
    </div>

    <div class="acreditaciones">
        <div class="gusano1">
            <Image src={gusano_anime1} alt="gusano1" height="70" />
            <span>認證生產商</span>
        </div>
        {
            /* <div class="certCollectionContainer">
            <Image src={certs03} alt="certs03" width="90" />
        </div>
        <div class="certCollectionContainer">
            <Image src={certs47} alt="certs47" width="90" />
        </div>*/
        }

        <div class="certCollectionContainer">
            <Image src={cert8} alt="certs8" width="90" />
        </div>
        <div class="slogan neon-changing">創新養蠶人</div>
    </div>
    <div class="ad">
        <TiktokAdsIframe
            videoId="7316253627415284998"
            height={10}
            width={5}
        />
        <span class="caption">細緻柔韌</span>
    </div>

    <div class="acreditaciones">
        <div>
            <Image src={silkpockets} alt="silkpockets" width="90" />
        </div>
        <div class="certCollectionContainer">
            <Image src={cert10} alt="certs10" width="90" />
        </div>
        <div class="certCollectionContainer">
            <Image src={cert11} alt="certs11" width="90" />
        </div>
        <div class="neon-slogan neon-changing">
            驚人 的 價格
        </div>
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding-block: 1rem;
        padding-top: 0.75rem;
    }
    .logoContainer {
        width: 24rem;
    }
    .acreditaciones {
        display: grid;
        grid-template-columns: auto auto;
        align-self: flex-start;
        padding-top: 0.5rem;
        max-height: 10rem;
    }
    .slogan {
        grid-column: 1 / span 2;
        font-size: 1.5rem;
        text-align: center;
        font-weight: 700;
        color: rgb(var(--secondary-color));
        margin-top: 1.5rem;
    }
    .ad{
        display: flex;
        gap: 0.25rem;
    }
    .caption {
        writing-mode: vertical-rl;
        font-size: 2.25rem;
        color: teal;
        padding-left: 0.5rem;
    }
    .neon-slogan {
        font-size: 1.5rem;
        text-wrap: wrap;
        line-height: 2rem;
        writing-mode: vertical-rl;
        
    }
    .gusano1 {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>
